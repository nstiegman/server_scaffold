<%= form_for @location, :html => {:multipart => true} do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
  <%= f.label :"Upload map" %><br/ >
  Acceptable image type: JPG, JPEG, GIF, BMP, PNG<br>
  <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :"Coordinates" %>   <br>Right click on map to get coordinates.<br />
    Lat: <%= f.text_field :latitude,:readonly => true %> Long: <%= f.text_field :longitude,:readonly => true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
