<script type="text/javascript">function updatelights(){ 

  // Alert the position with jQuery
  var offset = jQuery("#icon").offset();
     document.getElementById("light_x_position").value = offset.left;
     document.getElementById("light_y_position").value = offset.top;
     document.getElementById("icon").title = "Location: <%= @light.location_id %> </br> X position: "+offset.left+" </br> Y position: "+offset.top+" </br> ID code: <%= @light.light_id %> </br> Content: <%= @light.content %>  ";
	jQuery('#icon').speechbubble('');
     
    
}; </script>

<script type="text/javascript">function initialize(){ 
        var  mapheight = jQuery("#map").height();
        var  mapwidth  = jQuery("#map").width();

         document.getElementById("icon").style.top = mapheight/2 +"px";
         document.getElementById("icon").style.left = mapwidth/2 +"px";
         
         
  // Alert the position with jQuery
        var offset = jQuery("#icon").offset();
     document.getElementById("light_x_position").value = offset.left;
     document.getElementById("light_y_position").value = offset.top;
  	document.getElementById("icon").title = "Location: <%= @light.location_id %> </br> X position: "+offset.left+" </br> Y position: "+offset.top+" </br> ID code: <%= @light.light_id %> </br> Content: <%= @light.content %>  ";
