<h1>Current devices</h1>

<table>
  <tr>
    <th><%= sortable "device_id" %></th>
    <th><%= sortable "location_id" %></th>
    <th><%= sortable "light_id", "Frequency" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%= device.device_id %></td>
    <td><%= device.location_id %></td>
    <td><%= device.light_id %></td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Destroy', device, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

